    <style name="AppBaseTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#c2000000</item>
        <item name="colorAccent">@color/MyerSplashThemeColor</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:actionBarStyle">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:colorEdgeEffect">@android:color/black</item>
        <item name="android:windowAnimationStyle">@style/activityAnim</item>
        <item name="android:colorForeground">#a6a6a6</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="AboutTheme" parent="AppTheme">
        <item name="android:colorEdgeEffect">@color/MyerSplashThemeColor</item>
    </style>

    <style name="activityAnim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/out_from_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/in_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/out_from_right</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SettingsSubTitle">
        <item name="android:layout_marginLeft">@dimen/settings_margin_left</item>
        <item name="android:layout_marginTop">@dimen/settings_margin_mini_title_top</item>
        <item name="android:layout_marginBottom">@dimen/settings_margin_mini_title_bottom</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/MyerSplashThemeColor</item>
    </style>

    <style name="TimeTextView">
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">15</item>
        <item name="android:shadowColor">@color/ShadowColor</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:theme">@android:style/Theme.Holo.Light.NoActionBar.Fullscreen</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#c2000000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>
</resources>
